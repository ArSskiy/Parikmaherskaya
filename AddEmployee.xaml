<Page x:Class="Parikmaherskaya.AddEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Parikmaherskaya"
      mc:Ignorable="d" 
      d:DesignHeight="780" d:DesignWidth="1300"
      Title="AddEmployee">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="63*"/>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="88*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="225*"/>
                <ColumnDefinition Width="850*"/>
                <ColumnDefinition Width="225*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Введите сотрудника" Grid.Row="1" Grid.Column="1" FontSize="54"/>
            <TextBox Grid.Row="3" Grid.Column="1" Name="EmployeeTb" FontSize="60"/>
            <Button Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Content="Добавить" FontSize="46" Click="Button_Click"/>
        </Grid>
    </Grid>
</Page>
